<%- include('partials/head') %>
<article class="game-list-container">
    <h1><%= title %></h1>
    <h3><%= firstName + " " + lastName %></h3>
    <p><%= age %> years old</p>
    <p>Lives in <%= city %></p>
    <footer>
        <h3>Liked Games</h3>
        <div class="game-list">
        <% likedGames.forEach(function(game){ %>
            <article>
                <img src=<%= game.background_image%> alt="Picture of <%= game.name %>">
                <div class="content">
                    <h3><%= game.name %></h3>
                    <form action="/unliked-game" method="POST">
                        <button type="submit" name="id" value="<%= game.id %>">
                            <img src="images/thumb_down-24px.svg" alt="">
                            <p>Unlike</p>
                        </button>
                    </form>
                </div>
            </article>
        <% }) %>
        </div>
    </footer>
</article>
<%- include('partials/foot') %> 